{
    "manifest_version": 3,
    "name": "URL Shortener",
    "version": "1.0",
    "description": "A simple extension to shorten URLs using TinyURL",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "activeTab",
      "clipboardWrite"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "128": "icon.png"
    }
  }
  